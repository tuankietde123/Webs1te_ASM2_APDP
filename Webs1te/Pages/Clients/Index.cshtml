@page
@model Webs1te.Pages.Clients.IndexModel
@{
}

<br>
<h2>List of Student</h2>

    <a class='btn btn-primary btn-sm' href='/Clients/Create'>New Student</a>

<a class='btn btn-secondary btn-sm' href='/Account/Logout'>Log Out</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Course</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Create At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listClients)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.course</td>
                <td>@item.phone</td>
                <td>@item.address</td>
                <td>@item.creat_at</td>
                <td>
                   
                        <a class="btn btn-primary btn-sm" href="/Clients/Edit?id=@item.id">EDIT</a>
                        <a class="btn btn-danger btn-sm" href="/Clients/Delete?id=@item.id">Delete</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>